extends ../../layouts/common

block content
    h1 New name

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/user/creat" method ="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text" name ="name" value=values ? values.name : '')

        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="number" name ="phone" value= values ? values.phone : '')

        button.btn.btn-primary Creat