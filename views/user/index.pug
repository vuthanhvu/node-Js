extends ../../layouts/common

block content
    h1 
        span.mr-3 User
        a.btn.btn-primary(href="/user/creat") New name

    .d-flex.align-items-center       
        form.ml-auto(action="/user/search", method="GET", class="d-flex")
            input(type="text" name = "q", class="form-control")
            button(class="btn btn-primary ml-2") Search
    table.table 
        tr 
            th Name
            td Phone
            th

        each user in users        
            tr
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/user/" + user.id) View